<div class="row">
  <div class="col-6 offset-3">
    <%= form_with scope: :blog, url: url, method: method, class: 'form-group text-center mt-5', local: true do |form| %>
      <% if @blog.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@blog.errors.count, "error") %> prohibited
            this product from being saved:
          </h2>
          <ul>
            <% @blog.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <p>
        <%= form.label :title %><br>
        <%= form.text_field :title, class: "form-control"  %>
      </p>

      <p>
        <%= form.label :author %><br>
        <%= form.text_field :author, class: "form-control"  %>
      </p>

      <p>
        <%= form.label :slug %><br>
        <%= form.text_field :slug, class: "form-control"  %>
      </p>


      <p>
        <%= form.label :content %><br>
        <%= form.text_area :text, class: "form-control"  %>
      </p>

      <p>
        <%= form.label :image %><br>
        <%= form.file_field :image, class: 'form-control'%>
      </p>

      <p>
        <%= form.submit class: 'btn btn-success' %>
      </p>

      <%= link_to 'Back', admin_blogs_path, class: 'btn btn-warning'%>
    <% end %>
  </div>
</div>
