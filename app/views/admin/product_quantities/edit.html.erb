<%= form_with model: @product_quantity, url: admin_product_quantity_path(@product_quantity) , method: :patch, class: 'form-group text-center mt-5', local: true do |form| %>
  <% if @product_quantity.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@product_quantity.errors.count, "error") %> prohibited
        this product from being saved:
      </h2>
      <ul>
        <% @product_quantity.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :quantity %><br>
