<div class="container" id="blog-show">
  <h1><%= @blog.title %></h1>
  <p>
    <strong>by</strong>
    <%= @blog.author %> |
    <%= @blog.created_at.strftime('%B %d, %Y')%>
  </p>

  <%= image_tag(@blog.image_url, class: 'blog-image') if @blog.image? %>
  
  <p class="mt-5">
    <%= @blog.text %>
  </p>
</div>
